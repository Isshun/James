<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/lb_feature"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="Temperature"
                android:textSize="22sp" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:layout_margin="5dp" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="32dp"
                    android:orientation="horizontal" >

                    <Button
                        android:id="@+id/bt_type_switch"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/bg_feature_type"
                        android:text="Switch" />

                    <View
                        android:layout_width="5dp"
                        android:layout_height="match_parent" />

                    <Button
                        android:id="@+id/bt_type_temp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/bg_feature_type"
                        android:text="Temp" />

                    <View
                        android:layout_width="5dp"
                        android:layout_height="match_parent" />

                    <Button
                        android:id="@+id/bt_type_scenario"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/bg_feature_type"
                        android:text="Scenario" />
                </LinearLayout>

                <View
                    android:id="@+id/bt_overlay"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:background="@color/list_entry_option" />
            </FrameLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:layout_margin="5dp" >

                <EditText
                    android:id="@+id/edit_scene_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ems="10" >

                    <requestFocus />
                </EditText>

                <View
                    android:id="@+id/bt_scene_color"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_margin="5dp"
                    android:background="#4dcab9" />
            </LinearLayout>

            <Button
                android:id="@+id/bt_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Set icon" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:padding="5dp"
                    android:text="Scenario"
                    android:textColor="#555"
                    android:textSize="18sp" />

                <Button
                    android:id="@+id/bt_new_scenario"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Add scenario" />
            </LinearLayout>

            <ListView
                android:id="@+id/list_action"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scrollbars="none" >
            </ListView>
        </LinearLayout>
    </ScrollView>

</LinearLayout>